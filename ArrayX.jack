class ArrayX
{
    function Array zeros(int n)
    {
        var Array arr;
        var int i;
        if (n < 0) {
            do Error.new("Incorrect size"); }
        let arr = Array.new(n);
        let i = 0;
        while (i < n) {
            let arr[i] = 0;
            let i = i + 1; }
        return arr;
    }
}